<Page class="page" navigatingTo="onNavigatingTo" 
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Settings"></Label>
    </ActionBar>
    <GridLayout rows="*,60">
        <StackLayout row="0">
            <Label text="Warning, this clears everything. Even saved game data!" textWrap="true" style="text-align: center; font-size: 16px; color: red; padding: 12px; margin-left: 25px; width: 300px;" />
            <Button text="Clear All Data" tap="clearAllData" width="200px" />
        </StackLayout>
        <GridLayout row="1" rows="auto" columns="* * *">
            <Button text="Home" row="0" col="0" tap="goToHome" />
            <Button text="Settings" row="0" col="1" tap="goToSettings" />
            <Button text="Info" row="0" col="2" tap="goToInfo" />
        </GridLayout>
    </GridLayout>
</Page>